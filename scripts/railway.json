{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pip install -r requirements.txt"
    },
    "deploy": {
        "startCommand": "gunicorn article_generator:app --bind 0.0.0.0:$PORT --timeout 120 --workers 2 --log-level info --access-logfile - --error-logfile -",
        "healthcheckPath": "/",
        "healthcheckTimeout": 30,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}